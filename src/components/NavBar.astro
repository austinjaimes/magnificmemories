<style>
  nav {
    background-color: #333;
    border-bottom: 1px solid #eee;
    padding: 1rem 1.5rem;
    font-family: sans-serif;
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 1000;
  }

  .nav-container {
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
  }

  .logo {
    font-size: 1.5rem;
    font-weight: bold;
    color: white;
    text-decoration: none;
  }

  .menu-toggle {
    background: none;
    border: none;
    font-size: 2rem;
    cursor: pointer;
    color: white;
  }

  #menu-checkbox {
    display: none;
  }

  .nav-links {
    display: none;
    flex-direction: column;
    gap: 1rem;
    width: 100%;
    background-color: #333;
    padding: 1rem 0;
  }

  #menu-checkbox:checked + .nav-links {
    display: flex;
  }

  .nav-links a {
    text-decoration: none;
    color: white;
    font-weight: 500;
    font-size: 1rem;
    padding: 0.5rem 1rem;
  }

  .cta-button {
    background-color: #d97706;
    color: white;
    padding: 0.5rem 1rem;
    border-radius: 999px;
    text-decoration: none;
    font-weight: bold;
  }

  @media (min-width: 768px) {
    .menu-toggle {
      display: none;
    }

    #menu-checkbox {
      display: none;
    }

    .nav-container {
      flex-wrap: nowrap;
    }

    .nav-links {
      display: flex !important;
      flex-direction: row;
      align-items: center;
      gap: 2rem;
      width: auto;
      padding: 0;
      margin-left: auto;
    }

    .nav-links a {
      position: relative;
    }

    .nav-links a::after {
      content: "";
      position: absolute;
      width: 0%;
      height: 2px;
      background-color: #d97706;
      left: 0;
      bottom: -4px;
      transition: 0.3s;
    }

    .nav-links a:hover::after {
      width: 100%;
    }
  }
</style>

<nav style="background-color: #333;">
  <div class="nav-container">
    <!-- Menú hamburguesa + Logo -->
    <label style="color: white;" class="menu-toggle" for="menu-checkbox"
      >☰</label
    >
    <a style="color: white;" class="logo" href="/">Magnific Memories</a>

    <!-- Checkbox oculto pero funcional -->
    <input type="checkbox" id="menu-checkbox" />

    <!-- Enlaces -->
    <div class="nav-links">
      <a href="#inicio">Inicio</a>
      <a href="#portafolio">Portafolio</a>
      <a href="#paquetes">Paquetes</a>
      <a href="#opiniones">Opiniones</a>
      <a href="#contacto">Contacto</a>
      <a class="cta-button" href="#solicitar">Solicitar</a>
    </div>
  </div>
</nav>
