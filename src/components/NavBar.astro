<style>
  .subtitulo {
    font-family: "Montserrat", sans-serif;
  font-optical-sizing: auto;
  font-weight: 300;
  font-style: normal;
  }
  nav {
    background-color: #365A63;
    border-bottom: 1px solid #eee;
    padding: 1rem 1.5rem;
    font-family: sans-serif;
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 1000;
  }

  .nav-container {
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
  }

  .logo {
    display: flex;
    align-items: center;
  }

  .logo img {
    height: 70px;
    width: auto;
  }

  .menu-toggle {
    background: none;
    border: none;
    font-size: 3rem;
    cursor: pointer;
    color: #C6A664;
  }

  #menu-checkbox {
    display: none;
  }

  .nav-links {
    display: none;
    flex-direction: column;
    gap: 1rem;
    width: 100%;
    background-color: #365A63;
    padding: 1rem 0;
  }

  #menu-checkbox:checked + .nav-links {
    display: flex;
  }

  .nav-links a {
    text-decoration: none;
    color: #C6A664;
    font-weight: 500;
    font-size: 18px;
    padding: 0.5rem 1rem;
  }

  .cta-button {
    background-color: #C6A664;
    color: white;
    padding: 0.5rem 1rem;
    border-radius: 999px;
    text-decoration: none;
    font-weight: bold;
    transition: background 0.3s ease;
  }

  /* .cta-button:hover {
    background-color: #333;
  } */

  @media (min-width: 965px) {
    .menu-toggle {
      display: none;
    }

    #menu-checkbox {
      display: none;
    }

    .nav-container {
      flex-wrap: nowrap;
    }

    .nav-links {
      display: flex !important;
      flex-direction: row;
      align-items: center;
      gap: 2rem;
      width: auto;
      padding: 0;
      margin-left: auto;
    }

    .nav-links a {
      position: relative;
    }

    .nav-links a::after {
      content: "";
      position: absolute;
      width: 0%;
      height: 2px;
      background-color: #C6A664;
      left: 0;
      bottom: -4px;
      transition: 0.3s;
    }

    .nav-links a:hover::after {
      width: 100%;
    }
  }
</style>

<nav>
  <div class="nav-container">
    <a class="logo" href="/">
      <img src="/images/logo3.png" alt="Magnific Memories logo" />
    </a>
    <!-- Menú hamburguesa -->
    <label class="menu-toggle" for="menu-checkbox">☰</label>

    <!-- Logo como imagen -->
    

    <!-- Checkbox funcional -->
    <input type="checkbox" id="menu-checkbox" />

    <!-- Enlaces -->
    <div class="nav-links">
      <a href="#inicio" class="subtitulo">Inicio</a>
      <a href="#portafolio" class="subtitulo">Portafolio</a>
      <a href="#paquetes" class="subtitulo">Paquetes</a>
      <a href="#opiniones" class="subtitulo">Opiniones</a>
      <a href="#contacto" class="subtitulo">Contacto</a>
      <a style="color: #365A63;" class="cta-button subtitulo" href="#solicitar">Solicitar</a>
    </div>
  </div>
</nav>
