<style>
  body {
    background-color: #faf5ed;
  }
  section.contacto {
    background-color: #faf5ed;
    padding: 4rem 2rem;
    font-family: sans-serif;
    max-width: 600px;
    margin: 0 auto;
    color: #333;
  }

  section.contacto h2 {
    color: #c6a664;
    font-size: 2rem;
    margin-bottom: 1rem;
    text-align: center;
  }

  section.contacto p {
    margin-bottom: 2rem;
    text-align: center;
    color: #555;
  }

  form {
    display: flex;
    flex-direction: column;
    gap: 1.25rem;
  }

  label {
    font-weight: 600;
    margin-bottom: 0.3rem;
  }

  input[type="text"],
  input[type="email"],
  select,
  textarea {
    padding: 0.6rem 0.75rem;
    border: 1.5px solid #c6a664;
    border-radius: 6px;
    font-size: 1rem;
    font-family: inherit;
    resize: vertical;
  }

  textarea {
    min-height: 100px;
  }

  input[type="checkbox"] {
    margin-right: 0.5rem;
  }

  .checkbox-group {
    display: flex;
    align-items: center;
    font-size: 0.9rem;
  }

  button[type="submit"] {
    background-color: #c6a664;
    color: white;
    font-weight: 700;
    padding: 0.75rem;
    border: none;
    border-radius: 999px;
    cursor: pointer;
    font-size: 1.1rem;
    transition: background-color 0.3s ease;
  }

  button[type="submit"]:hover {
    background-color: #b89a44;
  }
</style>

<section
  style="background-color: #FAF5ED;"
  class="contacto"
  id="contacto"
>
  <h2>Contáctanos</h2>
  <p>
    Escríbenos y responderemos a la brevedad para ayudarte con tu invitación.
  </p>

  <form
    name="contacto-magnific-memories"
    method="POST"
    data-netlify="true"
    netlify-honeypot="bot-field"
  >
    <!-- Campo oculto para bot -->
    <input type="hidden" name="form-name" value="contacto-magnific-memories" />
    <input type="hidden" name="bot-field" />

    <label for="nombre">Nombre completo</label>
    <input id="nombre" name="nombre" type="text" required />

    <label for="email">Correo electrónico</label>
    <input id="email" name="email" type="email" required />

    <label for="telefono">Teléfono</label>
    <input id="telefono" name="telefono" type="text" />

    <label for="paquete">Paquete de interés</label>
    <select id="paquete" name="paquete" required>
      <option value="" disabled selected>Selecciona un paquete</option>
      <option value="basico">Básico</option>
      <option value="premium">Premium</option>
      <option value="personalizado">Personalizado</option>
      <option value="otro">Otro / Consultar</option>
    </select>

    <label for="mensaje">Mensaje</label>
    <textarea
      id="mensaje"
      name="mensaje"
      placeholder="Cuéntanos más..."
      required></textarea>

    <div class="checkbox-group">
      <input id="privacidad" name="privacidad" type="checkbox" required />
      <label for="privacidad">Acepto la política de privacidad</label>
    </div>

    <button type="submit">Enviar</button>
  </form>
</section>
