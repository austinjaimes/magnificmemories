<style>
  .titulo {
    font-family: "Great Vibes", cursive;
  font-weight: 400;
  font-style: normal;
  }
  .subtitulo {
    font-family: "Montserrat", sans-serif;
  font-optical-sizing: auto;
  font-weight: 300;
  font-style: normal;
  }
  body {
    background-color: #faf5ed;
  }
  section.contacto {
    background-color: #faf5ed;
    padding: 4rem 2rem;
    font-family: sans-serif;
    max-width: 600px;
    margin: 0 auto;
    color: #333;
    margin-top: -70px;
  }

  section.contacto h2 {
    color: #c6a664;
    font-size: 48px;
    margin-bottom: 1rem;
    text-align: center;
  }

  section.contacto p {
    margin-bottom: 2rem;
    font-size: 18px;
    text-align: center;
    color: #555;
  }

  form {
    display: flex;
    flex-direction: column;
    gap: 1.25rem;
  }

  label {
    font-weight: 600;
    margin-bottom: 0.3rem;
  }

  input[type="text"],
  input[type="email"],
  select,
  textarea {
    padding: 0.6rem 0.75rem;
    border: 1.5px solid #c6a664;
    border-radius: 6px;
    font-size: 1rem;
    font-family: inherit;
    resize: vertical;
  }
  .labeltitle {
    font-size: 18px;
  }

  textarea {
    min-height: 100px;
  }

  input[type="checkbox"] {
    margin-right: 0.5rem;
  }

  .checkbox-group {
    display: flex;
    align-items: center;
    font-size: 0.9rem;
  }

  button[type="submit"] {
    background-color: #c6a664;
    color: white;
    font-weight: 700;
    padding: 0.75rem;
    border: none;
    border-radius: 999px;
    cursor: pointer;
    font-size: 1.1rem;
    transition: background-color 0.3s ease;
  }

  button[type="submit"]:hover {
    background-color: #b89a44;
  }
  @media (min-width: 768px) {
    section.contacto h2 {
    font-size: 84px;
  }
  section.contacto p {
    font-size: 24px;
  }
  }
</style>

<section
  style="background-color: #FAF5ED;"
  class="contacto"
  id="contacto"
>
  <h2 class="titulo">Contáctanos</h2>
  <p class="subtitulo">
    Escríbenos y responderemos a la brevedad para ayudarte con tu invitación.
  </p>

  <form
    name="contacto-magnific-memories"
    method="POST"
    data-netlify="true"
    netlify-honeypot="bot-field"
  >
    <!-- Campo oculto para bot -->
    <input type="hidden" name="form-name" value="contacto-magnific-memories" />
    <input type="hidden" name="bot-field" />

    <label for="nombre" class="subtitulo labeltitle">Nombre completo</label>
    <input id="nombre" name="nombre" type="text" required />

    <label for="email" class="subtitulo labeltitle">Correo electrónico</label>
    <input id="email" name="email" type="email" required />

    <label for="telefono" class="subtitulo labeltitle">Teléfono</label>
    <input id="telefono" name="telefono labeltitle" type="text" />

    <label for="paquete" class="subtitulo labeltitle">Paquete de interés</label>
    <select id="paquete" name="paquete" required>
      <option value="" disabled selected class="subtitulo labeltitle">Selecciona un paquete</option>
      <option value="basico" class="subtitulo labeltitle">Básico</option>
      <option value="premium" class="subtitulo labeltitle">Premium</option>
      <option value="personalizado" class="subtitulo labeltitle">Personalizado</option>
      <option value="otro" class="subtitulo labeltitle">Otro / Consultar</option>
    </select>

    <label for="mensaje" class="subtitulo labeltitle">Mensaje</label>
    <textarea
      id="mensaje"
      name="mensaje"
      placeholder="Cuéntanos más..."
      required></textarea>

    <div class="checkbox-group">
      <input id="privacidad" name="privacidad" type="checkbox" required />
      <label for="privacidad" class="subtitulo labeltitle">Acepto la política de privacidad</label>
    </div>

    <button type="submit" class="subtitulo">Enviar</button>
  </form>
</section>
