<style>
  .subtitulo {
    font-family: "Montserrat", sans-serif;
    font-optical-sizing: auto;
    font-weight: 300;
    font-style: normal;
  }

  .titulo {
    font-family: "Great Vibes", cursive;
    font-weight: 400;
    font-style: normal;
  }

  section.paquetes {
    background-color: #FAF5ED;
    color: #333;
    padding: 4rem 2rem;
    font-family: sans-serif;
    text-align: center;
    margin-top: -70px;
  }

  .paquetes h2 {
    font-size: 48px;
    margin-bottom: 0.5rem;
    color: #C6A664;
  }

  .paquetes p {
    margin-bottom: 18px;
    font-size: 1.1rem;
    color: #555;
  }

  .package-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 2rem;
  }

  .package-card {
    position: relative;
    max-height: 420px;
    overflow: hidden;
    transition: max-height 0.5s ease;
    border: 2px solid #C6A664;
    border-radius: 0.75rem;
    padding: 2rem 1.5rem;
    background-color: #fff;
    box-shadow: 0 2px 8px rgba(198, 166, 100, 0.15);
    display: flex;
    flex-direction: column;
  }

  .package-card.expanded {
    max-height: 2000px;
  }

  .package-title {
    font-size: 48px;
    margin-bottom: 1rem;
    color: #C6A664;
  }

  .package-price {
    font-size: 2rem;
    font-weight: bold;
    margin-bottom: 1rem;
    color: #E9C7C4;
  }

  .package-features {
    text-align: left;
    margin-bottom: 2rem;
    list-style-type: none;
    padding-left: 0;
    color: #555;
  }

  .package-features li {
    margin-bottom: 0.5rem;
  }

  .package-cta {
    background-color: #C6A664;
    color: white;
    padding: 0.75rem 1.5rem;
    border-radius: 999px;
    font-weight: bold;
    text-decoration: none;
    display: inline-block;
    transition: background-color 0.3s ease;
  }

  .package-cta:hover {
    background-color: #b89a44;
  }

  .lista {
    font-size: 20px;
  }

  .read-more-btn {
    background: linear-gradient(to top, white 60%, transparent);
    text-align: center;
    padding: 1rem 0;
    cursor: pointer;
    font-weight: bold;
    color: #C6A664;
    z-index: 1;
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    transition: all 0.3s ease;
  }

  .package-card.expanded .read-more-btn {
    position: static;
    background: none;
    margin-top: 1rem;
  }

  @media (min-width: 768px) {
    .package-grid {
      grid-template-columns: repeat(3, 1fr);
    }

    .paquetes h2 {
      font-size: 84px;
    }

    .paquetes p {
      font-size: 24px;
    }
  }
</style>

